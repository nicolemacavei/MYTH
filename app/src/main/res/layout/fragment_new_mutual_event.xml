<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scrollbars="vertical"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:layout_margin="15dp"
                android:alpha="0.7"
                android:gravity="center"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="20dp">

<!--                    <EditText-->
<!--                        android:id="@+id/nameEventEditText"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:layout_marginEnd="20dp"-->
<!--                        android:hint="@string/name_of_the_event"-->
<!--                        android:inputType="text"-->
<!--                        android:padding="20dp"-->
<!--                        android:textColor="@color/midnightblue"-->
<!--                        android:visibility="gone"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Mutual event with a connection"
                        android:textSize="17sp"
                        android:padding="10dp"
                        android:layout_marginBottom="0dp"/>

                    <Button
                        android:id="@+id/chooseConnectionBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_connection_btn"
                        android:textAlignment="viewStart"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/userSelectedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:textSize="20sp"
                        android:paddingStart="10dp"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>


                    <TextView
                        android:id="@+id/minimalDurationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:hint="minimal duration for the event"
                        android:textSize="15sp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="0dp"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/durationSlideBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:valueFrom="10"
                        android:valueTo="120"
                        android:value="30"
                        android:stepSize="10.0"/>

                    <TextView
                        android:id="@+id/suggestionMeetingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:hint="Date and Time we found: "
                        android:textSize="17sp"
                        android:paddingStart="10dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/suggestedDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:paddingStart="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/selectHoursText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:hint="Please select a time to continue"
                        android:textSize="17sp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/busyFriendText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:hint="Seems like your friend is pretty busy"
                        android:textSize="15sp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/noHoursText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:hint="no hours found till next month"
                        android:textSize="17sp"
                        android:paddingStart="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/timeSlotsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:visibility="gone"
                        android:padding="10sp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>

                    <EditText
                        android:id="@+id/detailsEventEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:hint="@string/details_new_event"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:visibility="gone"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/suggestTimingBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/search_timeslot_btn" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>